{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "importHelpers": true,
    "removeComments": true,
    "esModuleInterop": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noErrorTruncation": true,
    "importsNotUsedAsValues": "error",
    "preserveSymlinks": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@dotinc/bouncer-db": ["../../packages/db"]
    }
  },
  "include": ["src/**/*.ts"]
}
